{
  "name": "clipboard-viewer",
  "version": "1.0.0",
  "description": "A cross-platform desktop clipboard manager built with Electron, React, TypeScript and Mantine",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "pnpm run dev:renderer & pnpm run dev:floating & wait-on http://localhost:3000 http://localhost:5174 && pnpm run dev:electron:managed",
    "dev:frontend": "node scripts/dev-frontend-managed.js",
    "dev:renderer": "vite --config src/renderer/main/vite.config.mjs",
    "dev:floating": "vite --config src/renderer/floating/vite.config.mjs",
    "dev:electron": "electron .",
    "dev:electron:managed": "node scripts/dev-electron-managed.js",
    "build": "pnpm run build:renderer && pnpm run build:floating && pnpm run build:main && pnpm run build:preload",
    "build:renderer": "vite build --config src/renderer/main/vite.config.mjs",
    "build:floating": "vite build --config src/renderer/floating/vite.config.mjs",
    "build:main": "tsc --project tsconfig.main.json",
    "build:preload": "tsc --project tsconfig.preload.json",
    "pack": "pnpm run build && electron-builder --dir",
    "dist": "pnpm run build && electron-builder",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "mantine",
    "clipboard",
    "desktop",
    "cross-platform"
  ],
  "author": "Leo",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-actions": "^9.0.8",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/addon-onboarding": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@types/babel__core": "^7.20.5",
    "@types/babel__generator": "^7.27.0",
    "@types/babel__template": "^7.4.4",
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^20.10.0",
    "@types/plist": "^3.0.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-is-dev": "^2.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "storybook": "^8.6.14",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.15.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@mantine/core": "^7.3.2",
    "@mantine/hooks": "^7.3.2",
    "@mantine/notifications": "^7.3.2",
    "@tabler/icons-react": "^2.47.0",
    "@uiw/react-md-editor": "^4.0.8",
    "electron-window-state": "^5.0.3",
    "highlight.js": "^11.11.1",
    "jsonfile": "^6.2.0",
    "mermaid": "^11.12.0",
    "mkdirp": "^0.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^10.1.0",
    "react-router-dom": "^6.20.1",
    "rehype-highlight": "^7.0.2",
    "rehype-rewrite": "^4.0.2",
    "remark-gfm": "^4.0.1",
    "universalify": "^2.0.1",
    "zustand": "^4.4.7"
  },
  "build": {
    "appId": "com.leo.clipboard-viewer",
    "productName": "Clipboard Viewer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/test/**",
      "!node_modules/**/tests/**",
      "!node_modules/**/*.md",
      "!node_modules/**/LICENSE*",
      "!node_modules/**/CHANGELOG*",
      "!node_modules/**/.git*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
