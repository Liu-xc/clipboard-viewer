{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/preload",
    "rootDir": "src",
    "skipLibCheck": true,
    "noEmit": false,
    "types": ["node"],
    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/preload/**/*",
    "src/shared/**/*"
  ]
}